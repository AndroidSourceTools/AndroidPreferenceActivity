<RelativeLayout
    android:id="@id/toolbar_background_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:popupTheme="?attr/toolbarPopupTheme"
        app:theme="?attr/toolbarTheme"/>

    <android.support.v7.widget.Toolbar
        android:id="@id/navigation_toolbar"
        android:layout_width="@dimen/default_navigation_width"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/toolbar_height"
        android:paddingLeft="@dimen/navigation_toolbar_padding_left"
        android:paddingStart="@dimen/navigation_toolbar_padding_left"
        app:popupTheme="?attr/toolbarPopupTheme"
        app:theme="?attr/toolbarTheme"/>

</RelativeLayout>
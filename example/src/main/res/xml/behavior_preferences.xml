<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/behavior_preference_navigation_category">
        <CheckBoxPreference
            android:defaultValue="@string/override_navigation_icon_preference_default_value"
            android:key="@string/override_navigation_icon_preference_key"
            android:summary="@string/override_navigation_icon_preference_summary"
            android:title="@string/override_navigation_icon_preference_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/behavior_preference_navigation_category">
        <CheckBoxPreference
            android:defaultValue="@string/hide_navigation_preference_default_value"
            android:key="@string/hide_navigation_preference_key"
            android:summary="@string/hide_navigation_preference_summary"
            android:title="@string/hide_navigation_preference_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/behavior_preference_initial_fragment_category">
        <CheckBoxPreference
            android:defaultValue="@string/use_alternative_title_preference_default_value"
            android:key="@string/use_alternative_title_preference_key"
            android:summary="@string/use_alternative_title_preference_summary"
            android:title="@string/use_alternative_title_preference_title"/>

        <EditTextPreference
            android:defaultValue="@string/alternative_title_preference_default_value"
            android:dependency="@string/use_alternative_title_preference_key"
            android:key="@string/alternative_title_preference_key"
            android:summary="@string/alternative_title_preference_summary"
            android:title="@string/alternative_title_preference_title"/>
    </PreferenceCategory>

</PreferenceScreen>